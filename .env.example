### Example .env file - safe to commit (no secrets)
# Copy this to .env and fill the real values only on your local machine

# Minimal required settings (defaults taken from docker-compose.yml)
# Non-sensitive values are synced from the repository `.env` (secrets kept as placeholders)
# OLLAMA_MODEL=llama3:8b-instruct-q4_0
OLLAMA_MODEL=phi3
WEBHOOK_TARGET_URL=http://n8:5678/webhook/wa/incoming
# Example phone number or ID (use digits only, e.g. 6281234567890)
PHONE_NUMBER_ID=628xxxxxxxxxx
# Facebook/WhatsApp Graph token (PLACEHOLDER)
WA_ACCESS_TOKEN=YOUR_FACEBOOK_GRAPH_ACCESS_TOKEN
VERIFY_TOKEN=1234567890

# Local ports and developer toggles
RELAY_PORT=3000
DEV_VERBOSE=true

# EvolutionAPI
# Auth api key (wajib) - replace with a real key in your local .env
AUTHENTICATION_API_KEY=EVOL_api_key_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CONFIG_SESSION_PHONE_VERSION=2.3000.1025062854
WHATSAPP_BUSINESS_CLOUD_API_ENABLED=false

# ===== Database (wajib saat pakai Postgres/MySQL) =====
DATABASE_ENABLED=true
DATABASE_PROVIDER=postgresql
# Use a connection string that points to the postgres service in docker-compose
DATABASE_CONNECTION_URI=postgresql://evolution:POSTGRES_PASSWORD@postgres:5432/evolution?schema=public
DATABASE_CONNECTION_CLIENT_NAME=evolution_v2

POSTGRES_USER=evolution
# Set a secure password in your local .env
POSTGRES_PASSWORD=POSTGRES_PASSWORD
POSTGRES_DB=evolution
PGADMIN_DEFAULT_EMAIL=admin@example.com   # change in your local .env if needed
PGADMIN_DEFAULT_PASSWORD=PGADMIN_PASS    # set a secure value locally

# Data apa saja yang disimpan (opsional, default contoh: aktif)
DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=true
DATABASE_SAVE_DATA_LABELS=true
DATABASE_SAVE_DATA_HISTORIC=true

# ===== Redis cache (direkomendasikan) =====
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://redis:6379/1
CACHE_REDIS_PREFIX_KEY=evolution_v2
CACHE_REDIS_SAVE_INSTANCES=false
CACHE_LOCAL_ENABLED=false

# ===== (opsional) public URL jika pakai reverse proxy/SSL =====
# SERVER_URL=https://your-domain.tld